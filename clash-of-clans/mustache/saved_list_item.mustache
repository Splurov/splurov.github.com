<div class="saved-list__item" id="saved-list-item-{{index}}">
    {{#hasCapacity}}
        <div class="saved-list__item-result">
            {{totalCapacity}} / {{armyCamps}}
        </div>
    {{/hasCapacity}}

    {{#units}}
        <table class="saved-list__table">
            {{#items}}
                <tr>
                    <td class="number">{{quantity}}</td>
                    <td>{{name}}</td>
                </tr>
            {{/items}}
        </table>
        <div class="saved-list__item-title"><span class="cost-elixir">{{cost}}</span></div>
    {{/units}}

    {{#dark}}
        <table class="saved-list__table">
            {{#items}}
                <tr>
                    <td class="number">{{quantity}}</td>
                    <td>{{name}}</td>
                </tr>
            {{/items}}
        </table>
        <div class="saved-list__item-title"><span class="cost-dark-elixir">{{cost}}</span></div>
    {{/dark}}

    {{#hasSpells}}
        <div class="saved-list__item-result">
            {{spellsCapacity}} / {{spellsFactoryLevel}}
        </div>
        <table class="saved-list__table">
            {{#spells}}
                <tr>
                    <td class="number">{{quantity}}</td>
                    <td>{{name}}</td>
                </tr>
            {{/spells}}
        </table>
        <div class="saved-list__item-title"><span class="cost-gold">{{spellsCost}}</span></div>
    {{/hasSpells}}

    <div class="saved-list__actions">
        <span class="button js-saved-load"
              data-num="{{index}}"
              tabindex="{{tabIndexLoad}}"
              title="Current composition will be lost">
            Load
        </span>
        <span class="button button_after js-saved-delete"
              data-num="{{index}}"
              tabindex="{{tabIndexDelete}}">
            Delete
        </span>
    </div>
</div>